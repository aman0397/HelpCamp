<% include ../partials/header %>

    <div class="container">
            <header class="jumbotron">
                <div class="container">
                    <h1>Welcome to HelpCamp!</h1>
                    <p>View some of the most popular academic and non-academic interests of the students in NSIT. </p>
                    <p>
                        <a class="btn btn-primary btn-large" href="/campgrounds/new">Add Your Interest</a>
                    </p>
                </div>
            </header>
            
            <div class="row text-center" style="dislpay:flex; flex-wrap:wrap;">
                <div class="col-lg-12">
                    <h3>Most popular areas of interests!</h3>
                </div>
                <% campgrounds.forEach(function(camp) { %>
                    <div class="col-md-3 col-sm-6">
                        <div class="img-thumbnail img-fluid" id="no_pad">
                            <img src="<%= camp.image %>" height="242px" width="242px" >
                            <div class="caption">
                                <h4><%= camp.name %></h4>
                            </div>
                            <p>
                                <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                            </p>
                        </div>
                    </div>
                <% }); %>
            </div>
    </div>

<%include ../partials/footer %>